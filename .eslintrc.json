{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "object-curly-newline": { "multiline": true },
    "linebreak-style": ["error", "windows"],
    "no-underscore-dangle": ["error", { "allow": ["__dirname"] }],
    "import/extensions": ["error", "ignorePackages", { "js": "always" }],
    "max-len": "off"
  }
}
